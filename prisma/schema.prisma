generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Contact {
  id          String       @id
  name        String
  phonenumber String       @unique
  botstatus   Boolean
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  preference  Preference[]

  @@index([phonenumber])
}

model Preference {
  id          String   @id
  userId      String
  preferences String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        Contact  @relation(fields: [userId], references: [id])
}
